@using CBT.OnlineTutor.Web.Models
@model CreateCategoryViewModel

@section scripts
{
    <environment names="Development">
        <script src="~/js/views/eclass/updatecategory.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/js/views/eclass/updatecategory.min.js" asp-append-version="true"></script>
    </environment>
}

<h2>
    @L("UpdateCategory")
</h2>

<form id="CategoryUpdateForm">
    <div class="form-group">
        @Html.HiddenFor(m => m.CategoryId)
    </div>

    <div class="form-group">
        <label for="Name">@L("CategoryName")</label>
        @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="Description">@L("Description")</label>
        @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label(L("CategoryList"))
        @Html.DropDownListFor(
            m => m.ParentId,
            Model.CategoryList,
            new
            {
                @class = "form-control",
                id = "CategoryCombobox"
            })
    </div>

    <div class="form-group">
        @Html.Label(L("ProgramList"))
        @Html.DropDownListFor(
            m => m.ProgramListId,
            Model.ProgramList,
            new
            {
                @class = "form-control",
                id = "ProgramListCombobox"
            })
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-success">@L("Save")</button>
        <a type="submit" class="btn btn-default" href="@Url.Action("CategoryList", "EClass")">@L("Cancel")</a>
    </div>
</form>
