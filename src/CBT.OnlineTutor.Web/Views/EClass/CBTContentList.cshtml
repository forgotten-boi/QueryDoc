@using CBT.OnlineTutor.Web.Startup;
@model CBT.OnlineTutor.Web.Models.CBTContentListViewModel

@{
    ViewBag.Title = @L("CBTContentList");
    ViewBag.ActiveMenu = PageNames.CBTContentList;
}

@section scripts
{
    <environment names="Development">
        <script src="~/js/views/eclass/cbtcontentlist.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/js/views/eclass/cbtcontentlist.min.js" asp-append-version="true"></script>
    </environment>
}

<form id="CBTContentListForm">
    <h3>
        @L("CBTContentList")
        <span><a class="btn btn-primary btn-sm" asp-action="CreateCBTContent">@L("AddNew")</a></span>
    </h3>
    <div class="row">
        <div class="col-lg-12">
            @L("Content_Description")
        </div>
    </div>
    <div class="row">
        <table class="table table-stripped">
            <tr>
                <th>Code</th>
                <th>Description</th>
                <th>Preceding Code</th>
                <th>Category</th>
                <th>Content Type</th>
                <th>Action</th>
            </tr>
            @foreach (var pList in Model.CBTContentLists)
            {
                <tr>
                    <td>@pList.Code</td>
                    <td>@Html.Raw(@pList.Description)</td>
                    <td>@pList.PrecedingCBTContentCode</td>
                    <td>@pList.CategoryName</td>
                    <td>@pList.ContentName</td>
                    <td>
                        <a id="UpdateCBTContent" name="UpdateCBTContent" asp-action="UpdateCBTContent" asp-route-id="@pList.CBTContentId"><i class="fa fa-edit"></i></a> |
                        <a id="DeleteCBTContent" name="DeleteCBTContent" data-index="@pList.CBTContentId" asp-action="DeleteCBTContent"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            }
        </table>
    </div>
</form>